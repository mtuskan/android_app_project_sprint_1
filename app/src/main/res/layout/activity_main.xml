        android:layout_marginEnd="160dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4B2E83"
        android:fontFamily="sans-serif"
        android:text="@string/resources"
        android:textColorLink="#4B2E83"
        app:layout_constraintBottom_toTopOf="@+id/AboutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DawgsTeCSSuportTextView" />

    <Button
        android:id="@+id/AboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="335dp"
        android:backgroundTint="#4B2E83"
        android:fontFamily="sans-serif"
        android:text="@string/about"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResourcesButton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="152dp"
        android:contentDescription="@string/university_of_washington_tacoma_logo"
        app:layout_constraintBottom_toTopOf="@+id/DawgsTeCSSuportTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/uwlogo_foreground" />

