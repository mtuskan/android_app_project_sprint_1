<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7A57A"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="1000dp">

        <Button
            android:id="@+id/ResourcesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4B2E83"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/resources_button_text"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="634dp" />

        <Button
            android:id="@+id/HomeButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="#4B2E83"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/home_button_text"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="634dp" />

        <TextView
            android:id="@+id/studyTipsView"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="272dp"
            android:fontFamily="@font/encode_sans_condensed_black"
            android:text="STUDY TIPS"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#4B2E83"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="45dp" />

        <TextView
            android:id="@+id/DescriptionView"
            android:layout_width="356dp"
            android:layout_height="220dp"
            android:fontFamily="@font/open_sans_light"
            android:text="\u2022 Start early
        \n\u2022 Study in groups
        \n\u2022 Find an environment and time that will work efficiently with your schedule
        \n\u2022 Rest and take breaks when needed
        \n\u2022 Don't be afraid to ask for help"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="93dp" />

        <TextView
            android:id="@+id/studySpotsView"
            android:layout_width="303dp"
            android:layout_height="108dp"
            android:fontFamily="@font/encode_sans_condensed_black"
            android:text="OUR FAVORITE STUDY SPOTS"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#4B2E83"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="313dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>