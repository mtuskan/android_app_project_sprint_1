<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B7A57A"
    android:fillViewport="true"
    android:isScrollContainer="true"
    android:nestedScrollingEnabled="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".StudyFragment">

        <TextView
            android:id="@+id/studyWithAView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="763dp"
            android:layout_marginEnd="247dp"
            android:fontFamily="@font/encode_sans_condensed_black"
            android:text="Study with a View:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#4B2E83"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/communalStudySpots" />

        <TextView
            android:id="@+id/studyTipsView"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="193dp"
            android:fontFamily="@font/encode_sans_condensed_black"
            android:text="STUDY TIPS"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#4B2E83"
            app:layout_constraintBottom_toTopOf="@+id/DescriptionView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DescriptionView"
            android:layout_width="357dp"
            android:layout_height="151dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:fontFamily="@font/open_sans_light"
            android:text="\u2022 Start early
        \n\u2022 Study in groups
        \n\u2022 Find an environment and time that will work efficiently with your schedule
        \n\u2022 Rest and take breaks when needed
        \n\u2022 Don't be afraid to ask for help
        \n\u2022 Use campus resources"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toTopOf="@+id/studySpotsView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studyTipsView" />

        <TextView
            android:id="@+id/studySpotsView"
            android:layout_width="296dp"
            android:layout_height="89dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="75dp"
            android:fontFamily="@font/encode_sans_condensed_black"
            android:text="OUR FAVORITE STUDY SPOTS"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#4B2E83"
            app:layout_constraintBottom_toTopOf="@+id/communalStudySpots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DescriptionView" />

        <TextView
            android:id="@+id/communalStudySpots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="233dp"
            android:layout_marginBottom="763dp"
            android:fontFamily="@font/encode_sans_condensed_black"
            android:text="Communal Studying:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#4B2E83"
            app:layout_constraintBottom_toTopOf="@+id/studyWithAView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studySpotsView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bhs3rdfloor"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="364dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="119dp"
            android:layout_height="121dp"
            android:rotation="90"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mattressfactory"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="494dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="117dp"
            android:layout_height="121dp"
            android:rotation="90"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tps2"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="494dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="117dp"
            android:layout_height="128dp"
            android:rotation="90"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tlc"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="362dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="118dp"
            android:layout_height="117dp"
            android:rotation="90"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cei"
            tools:layout_editor_absoluteX="277dp"
            tools:layout_editor_absoluteY="367dp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="120dp"
            android:layout_height="127dp"
            android:rotation="90"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/wcg"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="490dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>