<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7A57A"
    tools:context=".AboutActivity">

    <Button
        android:id="@+id/ResourcesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="89dp"
        android:backgroundTint="#4B2E83"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/resources_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/HomeButton"
        app:layout_constraintTop_toBottomOf="@+id/michaelEmailAddress" />

    <Button
        android:id="@+id/FeedbackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#4B2E83"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/DescriptionView"
        android:layout_width="356dp"
        android:layout_height="220dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/open_sans_light"
        android:text="DawgsTeCCSupport is an app created by UWT students for UWT students to easily access resources that are essential to success in the CS program! There are links to pages that contain information on resources located on campus such as career, portfolio, and study support. Other links include fun services such as our best places to study and where to get food. If you have any recommendations, feedback, or want to learn more about the developers of this app, our contact info is below and we will be more than happy to talk with you. We thank you for using this app!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/EmailView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studyTipsView" />

    <TextView
        android:id="@+id/EmailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:fontFamily="@font/encode_sans_condensed_black"
        android:text="EMAILS"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#4B2E83"
        app:layout_constraintBottom_toTopOf="@+id/jamesEmailAddress"
        app:layout_constraintEnd_toStartOf="@+id/jamesEmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionView" />

    <TextView
        android:id="@+id/jamesEmailAddress"
        android:layout_width="131dp"
        android:layout_height="26dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:singleLine="false"
        android:text="@string/jamesEmail"
        app:layout_constraintBottom_toTopOf="@+id/enriqueEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/namesView"
        app:layout_constraintTop_toBottomOf="@+id/EmailView" />

    <TextView
        android:id="@+id/enriqueEmailAddress"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/enriqueEmail"
        app:layout_constraintBottom_toTopOf="@+id/michaelEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/namesView"
        app:layout_constraintTop_toBottomOf="@+id/jamesEmailAddress" />

    <TextView
        android:id="@+id/michaelEmailAddress"
        android:layout_width="152dp"
        android:layout_height="21dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="170dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/michaelEmail"
        app:layout_constraintBottom_toTopOf="@+id/ResourcesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/namesView"
        app:layout_constraintTop_toBottomOf="@+id/enriqueEmailAddress" />

    <Button
        android:id="@+id/HomeButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#4B2E83"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/home_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ResourcesButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/michaelEmailAddress"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/studyTipsView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="272dp"
        android:fontFamily="@font/encode_sans_condensed_black"
        android:text="ABOUT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#4B2E83"
        app:layout_constraintBottom_toTopOf="@+id/DescriptionView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="148dp"
        android:fontFamily="@font/open_sans_light"
        android:text="James:\n\n\nEnrique:\n\n\nMichael:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/jamesEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailView" />

</androidx.constraintlayout.widget.ConstraintLayout>