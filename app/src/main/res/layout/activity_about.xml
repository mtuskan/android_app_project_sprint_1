    <Button
        android:id="@+id/FeedbackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#4B2E83"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/DescriptionView"
        android:layout_width="356dp"
        android:layout_height="220dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/open_sans_light"
        android:text="DawgsTeCCSupport is an app created by UWT students for UWT students to easily access resources that are essential to success in the CS program! There are links to pages that contain information on resources located on campus such as career, portfolio, and study support. Other links include fun services such as our best places to study and where to get food. If you have any recommendations, feedback, or want to learn more about the developers of this app, our contact info is below and we will be more than happy to talk with you. We thank you for using this app!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/EmailView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studyTipsView" />

    <TextView
        android:id="@+id/EmailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="267dp"
        android:fontFamily="@font/encode_sans_condensed_black"
        android:text="EMAILS"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#4B2E83"
        app:layout_constraintBottom_toTopOf="@+id/namesView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionView" />

    <EditText
        android:id="@+id/jamesEmailAddress"
        android:layout_width="131dp"
        android:layout_height="40dp"
        android:layout_marginEnd="199dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:singleLine="false"
        android:text="@string/jamesEmail"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/enriqueEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/namesView"
        app:layout_constraintTop_toBottomOf="@+id/EmailView" />

    <EditText
        android:id="@+id/enriqueEmailAddress"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="179dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/enriqueEmail"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/namesView"
        app:layout_constraintTop_toBottomOf="@+id/jamesEmailAddress" />

    <EditText
        android:id="@+id/michaelEmailAddress"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="169dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/michaelEmail"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/namesView"
        app:layout_constraintTop_toBottomOf="@+id/enriqueEmailAddress" />

    <Button
        android:id="@+id/ResourcesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="89dp"
        android:backgroundTint="#4B2E83"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/resources_button_text"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/michaelEmailAddress"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/HomeButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="78dp"
        android:layout_marginBottom="89dp"
        android:backgroundTint="#4B2E83"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/home_button_text"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ResourcesButton"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/michaelEmailAddress"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/studyTipsView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="272dp"
        android:fontFamily="@font/encode_sans_condensed_black"
        android:text="ABOUT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#4B2E83"
        app:layout_constraintBottom_toTopOf="@+id/DescriptionView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="165dp"
        android:fontFamily="@font/open_sans_light"
        android:text="James:\n\n\nEnrique:\n\n\nMichael:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/EmailView" />

</androidx.constraintlayout.widget.ConstraintLayout>